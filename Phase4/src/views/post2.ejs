    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"></script>


</head>

<body>
  <nav class="navbar navbar-expand-xl navbar-dark bg-dark" aria-label="Sixth navbar example">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">KKK팀 DB 플젝</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample06"
            aria-controls="navbarsExample06" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample06">
            <ul class="navbar-nav me-auto mb-2 mb-xl-0">
                <li class="nav-item">
                    <form method="get" name="NavIntro" action='/About'>
                      <a class="nav-link" href="#" form="NavIntro" onclick="javascript:document.NavIntro.submit();">소개</a>
                    </form>
                  </li>	
                  <li class="nav-item">
                    <form method="get" name="NavSearch" action='/Search'>
                      <a class="nav-link" href="#" form="NavSearch" onclick="javascript:document.NavSearch.submit();">검색</a>
                    </form>
                  </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"
                        aria-expanded="false">게시물</a>
                    <ul class="dropdown-menu">
                        <li>
                            <form method="get" name="NavNotice" action='/Article/Notice'>
                              <a class="dropdown-item" href="#" form="NavNotice" onclick="javascript:document.NavNotice.submit();">공지</a>
                            </form>
                        </li>
                        <li>
                            <form method="get" name="NavFree" action='/Article/Free'>
                              <a class="dropdown-item" href="#" form="NavFree" onclick="javascript:document.NavFree.submit();">자유글</a>
                            </form>
                        </li>
                        <li>
                            <form method="get" name="NavQNA" action='/Article/QNA'>
                              <a class="dropdown-item" href="#" form="NavQNA" onclick="javascript:document.NavQNA.submit();">QnA</a>
                            </form>
                        </li>    
                    </ul>
                </li>
                <li class="nav-item">
                    <form method="get" name="NavBook" action='/Bookmark'>
                        <% if (LS == 0) { %>
                        <a class="nav-link disabled" href="#" form="NavBook" onclick="javascript:document.NavBook.submit();">북마크</a>
                        <% } else { %>
                        <a class="nav-link" href="#" form="NavBook" onclick="javascript:document.NavBook.submit();">북마크</a>
                        <% } %>  
                    </form>
                </li>
                <li class="nav-item">
                    <form method="get" name="NavPaperAdd" action='/PaperAdd/Paper'>
                        <% if (LS == 0) { %>
                        <a class="nav-link disabled" href="#" form="NavPaperAdd" onclick="javascript:document.NavPaperAdd.submit();">논문 추가</a>
                        <% } else { %>
                        <a class="nav-link" href="#" form="NavPaperAdd" onclick="javascript:document.NavPaperAdd.submit();">논문 추가</a>
                        <% } %>  
                    </form>
                </li>
                <li class="nav-item">
                    <form method="get" name="NavLogin" action='/Login'></form>
                        <a class="nav-link" href="#"  form="NavQNA" onclick="javascript:document.NavLogin.submit();">로그인</a>
                    </form>
                </li>
            </ul>
            <h1 class="d-flex align-items-center fs-4 text-white mb-0">
                <%= id %>
            </h1>
        </div>
    </div>
  </nav>

  <!-- Page content-->
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-8">
        <!-- Post content-->
        <article>
          <!-- Post header-->
          <header class="mb-4">
            <!-- Post title-->
            <h1 class="fw-bolder mb-1"> <%=kind%></h1>
            <h2 class="fw-bolder mb-1"> <%=title%></h2>
            <!-- Post meta content-->
            <div class="text-muted fst-italic mb-2"><%=date%> / <%=author%></div>
            <!-- <div class="row">
              <div class="col"> -->
            <form method="get" name="PostDelete" action='/Article/Delete'>
              <input type="hidden" name="kind" id="kind" value="<%= kind %>"/>
              <input type="hidden" name="pno" id="pno" value="<%= pval %>"/>
              
              <% if (canDelete == 0) { %>
              <a class="btn btn-primary float-end disabled" form="PostDelete" 
              onclick="javascript:document.PostDelete.submit();">글 삭제</a>
              <% } else { %>
              <a class="btn btn-primary float-end" form="PostDelete" 
              onclick="javascript:document.PostDelete.submit();">글 삭제</a>
              <% } %>
            </form>
              <!-- </div>
            </div> -->
          </header>
          <!-- Post content-->
          <section class="mb-5">
            <p class="fs-5 mb-4"><%=content%></p>
          </section>
        </article>
        <!-- Comments section-->
        <section class="mb-5">
          <div class="card bg-light">
            <div class="card-body">
              <!-- Comment form-->
              <form class="mb-4" method="post" id="InputComment">
                <input type="hidden" name="kind" id="kind" value="<%= kind %>"/>
                <input type="hidden" name="cno" id="cno" value="<%= lastCMT %>"/>
                <input type="hidden" name="pno" id="pno" value="<%= pval %>"/>

                <textarea class="form-control" rows="3" name="UserComment"
                  placeholder="Join the discussion and leave a comment!"></textarea>
                

                <% if (LS == 0) { %>
                <input type="submit" class="btn btn-info disabled" value="댓글 등록" form="InputComment"
                  onclick="javascript: form.action='/Article/AddComment'"
                  style="display: block; margin: 5px 0 10px 0; float: right;">
                <% } else { %>
                <input type="submit" class="btn btn-info" value="댓글 등록" form="InputComment"
                  onclick="javascript: form.action='/Article/AddComment'"
                  style="display: block; margin: 5px 0 10px 0; float: right;">
                <% } %>  
                

              </form>
              <!-- Comment with nested comments-->
              
              <% for(var i=0;i<comments.length;++i){
                var ID = comments[i][0];
                var CNO = comments[i][1];
                var PNO = comments[i][2];
                var CCT = comments[i][3];%>
                
                <div class="d-flex">
                  <div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
                  <div class="ms-3">
                    <div class="fw-bold"><%=ID%></div>
                    <%=CCT%>
                  </div>
                </div>
              <%}%>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</body>

<!-- Footer-->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; KKK 2022</p>
  </div>
</footer>


</html>